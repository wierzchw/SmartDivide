<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="100.0" layoutY="100.0" text="SmartDivide">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="576.0" text="Dodaj nowy rachunek:">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Button fx:id="addBillButton" layoutX="442.0" layoutY="623.0" mnemonicParsing="false" onAction="#controllerAddBill" text="Dodaj">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <TextField fx:id="newBillName" layoutX="263.0" layoutY="626.0" />
      <Label layoutX="100.0" layoutY="625.0" text="Nazwa rachunku:">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label layoutX="95.0" layoutY="173.0" text="Wybierz rachunek:">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <ListView fx:id="listView" editable="true" layoutX="93.0" layoutY="228.0" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="openBillButton" layoutX="95.0" layoutY="454.0" mnemonicParsing="false" onAction="#openBill" text="Otwórz rachunek">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="deleteBillButton" layoutX="95.0" layoutY="495.0" mnemonicParsing="false" onAction="#controllerDeleteBill" prefHeight="31.0" prefWidth="133.0" text="Usuń rachunek">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="mergeBillsButton" layoutX="243.0" layoutY="454.0" mnemonicParsing="false" onAction="#mergeSelectedBills" text="Połącz rachunki">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
